<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/all_students"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/home_page_for_admin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/page_home_page_for_admin_ek1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <View
                android:id="@+id/_bg__home_page_for_admin_ek2"
                android:layout_width="412dp"
                android:layout_height="869dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/_bg__home_page_for_admin_ek2_shape" />

            <ImageView
                android:id="@+id/rectangle_1"
                android:layout_width="412dp"
                android:layout_height="864dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/rectangle_16"
                android:src="@drawable/rectangle_1"
                tools:ignore="ImageContrastCheck" />


            <TextView
                android:id="@+id/messages2"
                android:layout_width="160dp"
                android:layout_height="53dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="131dp"
                android:layout_marginTop="41dp"
                android:text="@string/all_students"
                android:textColor="@color/sign_up_ek4_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/studentsBtn"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="759dp"
                android:layout_marginBottom="43dp"
                android:background="@drawable/round_btn"
                android:text="@string/add"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/teachersBtn"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="760dp"
                android:layout_toEndOf="@+id/studentsBtn"
                android:background="@drawable/round_btn"
                android:text="@string/update"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/classesBtn"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="758dp"
                android:layout_toEndOf="@+id/teachersBtn"
                android:background="@drawable/round_btn"
                android:text="@string/delete"
                tools:ignore="TextContrastCheck" />

            <ImageView
                android:id="@+id/arrow_left_by_streamlinehq"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="78dp"
                android:layout_marginTop="44dp"
                android:contentDescription="@string/arrow_left_by_streamlinehq"
                android:src="@drawable/arrow_left_by_streamlinehq" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/studentsRecyclerView"
                android:layout_width="375dp"
                android:layout_height="608dp"
                android:layout_below="@+id/messages2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="18dp" />


        </RelativeLayout>

    </ScrollView>
</HorizontalScrollView>